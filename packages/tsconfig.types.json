{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/es",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "incremental": false,
    "composite": false
  },
  "include": [
    "./index.ts",
    "./*.d.ts",
    "./package.json",
    "./components/*.ts",
    "./components/**/*.ts",
    "./components/**/*.vue",
    "./types/*.ts",
    "./utils/*.ts"
  ],
  "exclude": [
    "./**/_TEST_"
  ]
}
