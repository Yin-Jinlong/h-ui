{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/": ["./src/"],
      "@ui": ["../packages"],
      "@ui/*": ["../packages/*"],
      "@pages/*": ["./src/pages/*"],
      "@/components": ["./src/components"],

    }
  },
  "include": [
    "./*.ts",
    "./src/*.ts",
    "./src/**/*.ts",
    "./src/**/*.vue"
  ],
  "references": [
    {
      "path": "../packages/tsconfig.types.json"
    }
  ]
}
